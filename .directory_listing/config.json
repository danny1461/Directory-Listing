{
    "drupal": {
        "rules": {
            "/misc/drupal.js": "file"
        }
    },
    "wordpress": {
        "rules": {
            "/wp-admin": "folder"
        }
    },
    "foundation": {
        "rules": {
            "/var/themes": "folder"
        }
    },
    "tumbleweed": {
        "rules": {
            "/application": "folder",
            "/library/Tumbleweed": "folder"
        }
    },
    "zend_framework": {
        "rules": {
            "/application": "folder",
            "/library": "folder"
        }
    },
    "cms": {
        "ifTags": [
            "drupal",
            "wordpress",
            "tumbleweed"
        ]
    },
    "static, html": {
        "rules": {
            "/index.html": "file"
        },
        "combines": false
    },
    "static, php": {
        "rules": {
            "/index.php": "file"
        },
        "combines": false
    },
    "directory": {
        "combines": false
    },
    "{EXT}": {
        "isFile": true
    }
}