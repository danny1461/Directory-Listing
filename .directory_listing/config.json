{
    "drupal7": {
        "rules": {
            "/misc/drupal.js": "file"
        }
    },
    "drupal8": {
        "rules": {
            "/core/misc/drupal.js": "file",
            "/core/misc/logo/": "!folder"
        }
    },
    "drupal9": {
        "rules": {
            "/core/misc/drupal.js": "file",
            "/core/misc/logo/": "folder"
        }
    },
    "wordpress": {
        "rules": {
            "/wp-admin": "folder"
        }
    },
    "foundation": {
        "rules": {
            "/var/themes": "folder"
        }
    },
    "tumbleweed": {
        "rules": {
            "/application": "folder",
            "/library/Tumbleweed": "folder"
        }
    },
    "zend_framework": {
        "rules": {
            "/application": "folder",
            "/library": "folder"
        }
    },
    "cms": {
        "ifTags": [
            "drupal7",
            "drupal8",
            "drupal9",
            "wordpress",
            "tumbleweed"
        ]
    },
    "static, html": {
        "rules": {
            "/index.html": "file"
        },
        "combines": false
    },
    "static, php": {
        "rules": {
            "/index.php": "file"
        },
        "combines": false
    },
    "directory": {
        "combines": false
    },
    "{EXT}": {
        "isFile": true
    }
}